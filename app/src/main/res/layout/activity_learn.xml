<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#2196f3" >

        <ImageView
            android:id="@+id/lesson_image"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/species"/>

        <TextView
            android:id="@+id/lesson_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lesson_1_title"
            android:textSize="35sp"
            android:textColor="#e3f2fd"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/lesson_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e3f2fd"
            android:text="@string/lesson_1_description"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_margin="25dp"
            android:background="#0d47a1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's Capture This Moment!"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="#e3f2fd"/>
        <TextView
            android:id="@+id/lesson_photoDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:text="Take a second to capture this moment!"
            android:textColor="#bbdefb"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take Picture"
                android:onClick="capturePhoto"
                android:textColor="#b3e5fc"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"/>

            <ImageView
                android:id="@+id/capturedPhotoImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#94b3d0"
                android:padding="1dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/nextButton"
                android:onClick=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Next"
                android:layout_alignParentRight="true"
                android:textColor="#b3e5fc"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>